{
  "buildOnSave": false,
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "../src",
    "declaration": true,
    "declarationDir": "../lib",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2016", "es2017", "dom", "es2018"],
    "moduleResolution": "node",
    "module": "esnext",
    "noEmit": false,
    "noEmitHelpers": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../lib",
    "pretty": true,
    "removeComments": false,
    "rootDir": "../src",
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "strictNullChecks": false,
    "target": "es6",
    "typeRoots": ["../node_modules/@types", "../src/kayenta/report/detail/graph/semiotic/declarations"],
    "paths": {
      "kayenta/*": ["./src/kayenta/*"],
      "kayenta": ["./src/kayenta"]
    }
  },
  "include": ["../src/kayenta/**/*.ts", "../src/kayenta/**/*.tsx"],
  "exclude": ["../lib", "../src/kayenta/**/*.spec.ts"]
}
